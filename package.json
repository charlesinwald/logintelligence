{
  "name": "logintelligence",
  "version": "1.0.0",
  "description": "Real-time LogIntelligence dashboard with AI-powered classification and pattern detection using Gemini",
  "type": "module",
  "main": "server/index.ts",
  "bin": {
    "logintelligence": "./bin/logintelligence.ts"
  },
  "scripts": {
    "dev": "concurrently \"yarn server:dev\" \"yarn client:dev\"",
    "server:dev": "NODE_ENV=development tsx watch server/index.ts",
    "client:dev": "cd client && yarn dev",
    "server": "tsx server/index.ts",
    "build": "cd client && yarn build",
    "simulate": "tsx scripts/simulate-errors.ts",
    "ingest": "tsx scripts/ingest-stream.ts",
    "setup": "yarn install && cd client && yarn install && cd .. && tsx scripts/setup-db.ts",
    "prepublishOnly": "cd client && yarn install && yarn build",
    "postinstall": "node -e \"require('fs').mkdirSync('data',{recursive:true})\""
  },
  "keywords": [
    "error-tracking",
    "ai",
    "real-time",
    "dashboard",
    "monitoring",
    "gemini",
    "error-intelligence",
    "error-analysis",
    "log-analysis",
    "observability",
    "gemini-ai"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/logintelligence.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/logintelligence/issues"
  },
  "homepage": "https://github.com/yourusername/logintelligence#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "better-sqlite3": "^11.7.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "open": "^11.0.0",
    "socket.io": "^4.8.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.12",
    "concurrently": "^9.1.2",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4"
  }
}
