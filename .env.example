# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Google OAuth (get from https://console.cloud.google.com/apis/credentials)
# Used by backend to verify tokens
GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
# Used by frontend (Vite) - same value as above
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com

# Server Configuration
PORT=7878
NODE_ENV=development

# Database
DB_PATH=./data/errors.db

# JWT Secrets (generate with: openssl rand -base64 32)
JWT_SECRET=your_random_secret_key_min_32_chars_change_this
JWT_REFRESH_SECRET=your_random_refresh_secret_min_32_chars_change_this
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Stripe Configuration (get from https://dashboard.stripe.com/test/apikeys)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PRICE_PRO_MONTHLY=price_your_monthly_price_id_here
STRIPE_PRICE_PRO_YEARLY=price_your_yearly_price_id_here

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:5173

# Feature Flags
ENABLE_TRIAL=true
TRIAL_DAYS=14
